<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:atts="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/logo_width"
                android:layout_height="@dimen/logo_height"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_60dp"
                android:src="@drawable/greenlogo" />

            <com.inforica.booker.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30dp"
                android:gravity="center"
                android:text="@string/what_is_office_account"
                android:textColor="@color/text_black"
                android:textSize="@dimen/veryExtralargeFont"
                atts:fontName="@string/fnt_OpenSans_Regular" />

            <com.inforica.booker.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30dp"
                android:gravity="center"
                android:text="@string/instruction_one"
                android:textColor="@color/text_black"
                android:textSize="@dimen/LargeFont"
                atts:fontName="@string/fnt_OpenSans_Regular" />

            <com.inforica.booker.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_20dp"
                android:gravity="center"
                android:text="@string/instruction_two"
                android:textColor="@color/text_black"
                android:textSize="@dimen/LargeFont"
                atts:fontName="@string/fnt_OpenSans_Regular" />
            <!--  <Button
                  android:layout_width="fill_parent"
                  android:layout_height="@dimen/edit_text_height"
                  android:textColor="@color/text_white"
                  android:layout_marginLeft="@dimen/margin_20dp"
                  android:layout_marginRight="@dimen/margin_20dp"
                  style="@style/MediumFont"
                  android:background="@color/primary"
                  android:text="@string/back"
                  android:drawableLeft="@drawable/ic_arrow_back_white_18dp"
                  android:drawablePadding="@dimen/margin_5dp"
                  android:layout_marginTop="@dimen/margin_30dp"/>-->

            <com.andexert.library.RippleView
                android:id="@+id/back_button"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:background="@color/primary"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">

                <com.inforica.booker.views.ButtonView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_arrow_back_white_18dp"
                    android:drawablePadding="@dimen/margin_5dp"
                    android:text="@string/back"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/MediumFont"
                    atts:fontName="@string/fnt_OpenSans_semi_bold" />
            </com.andexert.library.RippleView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
